<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.root.jobsquare.Signup"
    android:orientation="vertical">
    <android.support.design.widget.TextInputLayout
        android:id="@+id/dUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="5dp">

        <EditText
            android:id="@+id/Username"
            android:layout_width="298dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/email"
            android:layout_alignLeft="@+id/email"
            android:layout_alignStart="@+id/email"
            android:ems="10"
            android:hint="Username"
            android:inputType="textPersonName" />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/demail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="5dp">
        <EditText
            android:id="@+id/email"
            android:layout_width="298dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/age"
            android:hint="Email" />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/dage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp">
        <EditText
            android:id="@+id/age"
            android:layout_width="298dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/location"
            android:layout_marginLeft="30dp"
            android:hint="Age"
            android:inputType="textPersonName" />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/dlocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp">

        <EditText
            android:id="@+id/location"
            android:layout_width="295dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:hint="Location"
            android:layout_marginLeft="30dp"
            android:inputType="textPersonName" />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/dContact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp">
        <EditText
            android:id="@+id/contact"
            android:layout_width="293dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/mlogin"
            android:layout_centerHorizontal="true"
            android:hint="Contact Number"
            android:layout_marginLeft="30dp"
            android:inputType="textPersonName" />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/dpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp">
        <EditText
            android:id="@+id/password"
            android:layout_width="292dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/lname"
            android:layout_alignLeft="@+id/gender"
            android:layout_alignStart="@+id/gender"
            android:layout_marginLeft="30dp"
            android:ems="10"
            android:hint="Password" />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/dsignup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <Button
            android:id="@+id/signup"
            android:layout_width="294dp"
            android:layout_height="wrap_content"
            android:onClick="onclick"
            android:layout_marginLeft="30dp"
            android:background="#110774"
            android:alpha="0.8"
            android:textColor="#fff"
            android:text="Register" />
    </android.support.design.widget.TextInputLayout>

</LinearLayout>
