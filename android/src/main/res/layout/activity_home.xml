<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.root.jobsquare.Home"
    android:orientation="vertical">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/dbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp">
        <Button
            android:id="@+id/hire"
            android:layout_width="294dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/gender"
            android:layout_alignLeft="@+id/gender"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/gender"
            android:layout_alignStart="@+id/gender"
            android:onClick="onclick"
            android:layout_marginLeft="30dp"
            android:background="#CC0000"
            android:alpha="0.7"
            android:textColor="#fff"
            android:text="want to hire" />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/dbutton2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp">
        <Button
            android:id="@+id/work"
            android:layout_width="294dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:onClick="onclick"
            android:layout_marginLeft="30dp"
            android:background="#110774"
            android:alpha="0.7"
            android:textColor="#fff"
            android:text="want to work" />
    </android.support.design.widget.TextInputLayout>
</LinearLayout>
